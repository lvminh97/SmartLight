<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/layout_control_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/custom_header">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_baseline_arrow_back_ios_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="Meeting Room"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_control1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_control_header"
        android:layout_marginTop="100dp"
        android:weightSum="2">

        <Button
            android:id="@+id/btn_temp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@drawable/custom_button"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="30 oC"/>

        <Button
            android:id="@+id/btn_light"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/custom_button"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="Độ sáng của\nbóng đèn"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_power"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/layout_control1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/custom_button"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:text="Công suất"/>

    <Button
        android:id="@+id/btn_setup"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/btn_power"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/custom_button"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:text="Hệ thống sắp xếp bóng đèn indoor"/>

</androidx.constraintlayout.widget.ConstraintLayout>